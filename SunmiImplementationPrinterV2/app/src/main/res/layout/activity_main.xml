<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonTestPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test Printer"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:text="Font Size.."
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/fontSizeTxtI"
            android:inputType="number"
            android:layout_height="wrap_content">
        </EditText>
             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:text="Position"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/hexPositionTxt"
            android:inputType="number"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:text="Content Test"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/txtContent"
            android:layout_height="wrap_content">
        </EditText>

        <Button
            android:id="@+id/buttonTestPrintPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test Printer Position"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="29dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>